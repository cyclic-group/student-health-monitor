<div id="login-container" class="container-md">
    <div class="row justify-content-center justify-content-sm-around align-items-center">
        <div class="col-8 mb-5 mt-5 col-sm-4 mb-sm-auto mt-sm-4">
            <%= image_tag 'logos/logo-png.png', alt: 'App Logo', class: 'img-fluid' %>
        </div>

        <div class="col-11 col-sm-6 mt-sm-4">
            <%= form_with url: login_path, method: :post, id: 'login-form', class: 'needs-validation', html: { novalidate: true } do |form| %>
                <div class="form-floating mb-4 mb-sm-3">
                    <%= form.text_field :id, class: 'form-control', placeholder: '学号', required: true %>
                    <%= form.label :id, '学号', class: 'form-label' %>
                    <div class="invalid-feedback">
                        必填
                    </div>
                </div>
                <div class="form-floating mb-5 mb-sm-4">
                    <%= form.password_field :password, class: 'form-control', placeholder: '密码', required: true %>
                    <%= form.label :password, '密码', class: 'form-label' %>
                    <div class="invalid-feedback">
                        必填
                    </div>
                </div>
                <%= form.submit '登录', id: 'submit-button', class: 'd-block mx-auto' %>
            <% end %>
        </div>
    </div>
</div>