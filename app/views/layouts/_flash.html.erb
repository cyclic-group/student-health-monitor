<% if flash[:success] %>
  <div class="alert alert-success mx-4 mt-4 mb-0" role="alert">
    <i class="fa-solid fa-circle-check me-1"></i><%= flash[:success] %>
  </div>
<% elsif flash[:warning] %>
  <div class="alert alert-danger mx-4 mt-4 mb-0" role="alert">
    <i class="fa-solid fa-circle-exclamation me-1"></i><%= flash[:warning] %>
  </div>
<% end %>